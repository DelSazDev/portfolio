---
import Layout from '../layouts/Layout.astro';

const proyectos = [
  {
    id: 1,
    titulo: "Scanner de Vulnerabilidades Web",
    descripcion: "Herramienta automatizada para detectar SQL Injection, XSS y otras vulnerabilidades comunes en aplicaciones web.",
    tecnologias: ["Python", "Requests", "BeautifulSoup"],
    fecha: "Diciembre 2024",
    estado: "Completado",
    github: "#"
  },
  {
    id: 2,
    titulo: "Analizador de Tráfico de Red",
    descripcion: "Script para capturar y analizar paquetes de red, identificando patrones sospechosos y posibles amenazas.",
    tecnologias: ["Python", "Scapy", "Wireshark"],
    fecha: "Noviembre 2024",
    estado: "En desarrollo",
    github: "#"
  },
  {
    id: 3,
    titulo: "Keylogger Educativo",
    descripcion: "Proyecto educativo para entender cómo funcionan los keyloggers y métodos de detección.",
    tecnologias: ["Python", "pynput", "Windows API"],
    fecha: "Octubre 2024",
    estado: "Completado",
    github: "#"
  },
  {
    id: 4,
    titulo: "Password Cracker",
    descripcion: "Herramienta de fuerza bruta y diccionario para testear la fortaleza de contraseñas.",
    tecnologias: ["Python", "Hashlib", "Multiprocessing"],
    fecha: "Septiembre 2024",
    estado: "Completado",
    github: "#"
  }
];
---

<Layout title="Proyectos - SEC_OPS">
  <section class="proyectos-section">
    <div class="container">
      <div class="header-content">
        <h1 class="page-title">
          <span class="terminal-prompt">$</span> ls -la /proyectos
        </h1>
        <p class="page-description">
          Recopilación de proyectos de ciberseguridad desarrollados durante mi aprendizaje autodidacta.
        </p>
      </div>

      <div class="proyectos-grid">
        {proyectos.map((proyecto) => (
          <article class="proyecto-card">
            <div class="card-header">
              <span class="proyecto-id">#{proyecto.id.toString().padStart(3, '0')}</span>
              <span class={`estado ${proyecto.estado === 'Completado' ? 'completado' : 'desarrollo'}`}>
                {proyecto.estado}
              </span>
            </div>
            
            <h2 class="proyecto-titulo">{proyecto.titulo}</h2>
            <p class="proyecto-descripcion">{proyecto.descripcion}</p>
            
            <div class="tecnologias">
              {proyecto.tecnologias.map((tech) => (
                <span class="tech-badge">{tech}</span>
              ))}
            </div>
            
            <div class="card-footer">
              <span class="fecha">{proyecto.fecha}</span>
              <a href={proyecto.github} class="github-link">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
                </svg>
                Ver código
              </a>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>
</Layout>

<style>
  .proyectos-section {
    padding: 4rem 0;
    min-height: calc(100vh - 80px);
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .header-content {
    margin-bottom: 4rem;
    animation: fadeInUp 0.8s ease;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .page-title {
    font-family: 'JetBrains Mono', monospace;
    font-size: clamp(2rem, 5vw, 3rem);
    color: var(--text-primary);
    margin-bottom: 1rem;
  }

  .terminal-prompt {
    color: var(--accent-primary);
    margin-right: 0.5rem;
  }

  .page-description {
    font-size: 1.1rem;
    color: var(--text-secondary);
    max-width: 600px;
  }

  .proyectos-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 2rem;
  }

  .proyecto-card {
    background: var(--bg-secondary);
    border: 1px solid rgba(0, 255, 159, 0.2);
    border-radius: 8px;
    padding: 2rem;
    transition: all 0.3s ease;
    animation: fadeInUp 0.8s ease backwards;
  }

  .proyecto-card:nth-child(1) { animation-delay: 0.1s; }
  .proyecto-card:nth-child(2) { animation-delay: 0.2s; }
  .proyecto-card:nth-child(3) { animation-delay: 0.3s; }
  .proyecto-card:nth-child(4) { animation-delay: 0.4s; }

  .proyecto-card:hover {
    transform: translateY(-5px);
    border-color: var(--accent-primary);
    box-shadow: 0 10px 40px rgba(0, 255, 159, 0.2);
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .proyecto-id {
    font-family: 'JetBrains Mono', monospace;
    color: var(--accent-primary);
    font-size: 0.9rem;
  }

  .estado {
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
  }

  .completado {
    background: rgba(0, 255, 159, 0.1);
    color: var(--accent-primary);
    border: 1px solid var(--accent-primary);
  }

  .desarrollo {
    background: rgba(255, 190, 11, 0.1);
    color: #ffbe0b;
    border: 1px solid #ffbe0b;
  }

  .proyecto-titulo {
    font-family: 'JetBrains Mono', monospace;
    font-size: 1.5rem;
    color: var(--text-primary);
    margin-bottom: 1rem;
  }

  .proyecto-descripcion {
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .tecnologias {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .tech-badge {
    padding: 0.25rem 0.75rem;
    background: rgba(0, 217, 255, 0.1);
    color: var(--accent-secondary);
    border: 1px solid var(--accent-secondary);
    border-radius: 4px;
    font-size: 0.85rem;
    font-family: 'Space Mono', monospace;
  }

  .card-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 1rem;
    border-top: 1px solid rgba(0, 255, 159, 0.1);
  }

  .fecha {
    color: var(--text-secondary);
    font-size: 0.9rem;
  }

  .github-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--accent-primary);
    text-decoration: none;
    font-size: 0.9rem;
    transition: all 0.3s ease;
  }

  .github-link:hover {
    transform: translateX(5px);
  }

  @media (max-width: 768px) {
    .proyectos-grid {
      grid-template-columns: 1fr;
    }

    .container {
      padding: 0 1.5rem;
    }
  }
</style>